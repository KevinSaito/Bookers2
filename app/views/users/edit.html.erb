<h1>User info</h1>
  <%= form_with model: @user, url: user_path(@user.id), method: :patch, local:true do |f| %>
    <h4>name</h4>
      <%= f.text_field :name %>
    <h4>image</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>introduction</h4>
      <%= f.text_area :introduction %>
    <%= f.submit 'Update User' %>
  <% end %>