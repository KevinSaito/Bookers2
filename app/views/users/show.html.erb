<%= render 'books/list', book: @newbook, user: @user %>

<h1>Books detail</h1>
<table>
    <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to image_tag book.user.get_profile_image("100x100") %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
      </tr>
      <% end %>
    </tbody>
</table>