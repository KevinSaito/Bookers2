<%= render 'books/list', book: @book, user: @user %>
<h1>Books</h1>
<table>
    <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
    </thead>
    <tbody>
    <% @books.each do |book| %>

      <tr>
        <td><%= link_to image_tag book.user.get_profile_image("100x100") %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>

    <% end %>
    </tbody>
</table>