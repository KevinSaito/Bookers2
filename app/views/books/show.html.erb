<%= flash[:notice] %>
<h1>Books Detail</h1>
<table>
    <thead>
        <th>Title</th>
        <th>Opnion</th>
        <th colspan="3"></th>
    </thead>
    <tbody>
    <% @books.each do |book| %>

      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>

        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
       </tr>

    <% end %>
    </tbody>
</table>