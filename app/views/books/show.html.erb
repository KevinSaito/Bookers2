<%= render 'books/list', book: @newbook, user: @user %>
<%= flash[:notice] %>
<div class='col-md-8 offset-md-1'>
<h2>Book detail</h2>
<table class='table'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
      
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
      </tr>
    </tbody>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Back", user_path(@user.id) %>
</table>
</div>